<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <Button
        android:id="@+id/bt_testAffinity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="taskAffinity" />

    <Button
        android:id="@+id/bt_viewtouch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CustomView Touch" />

    <Button
        android:id="@+id/bt_bitmap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bitmap image" />

    <Button
        android:id="@+id/bt_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upgrade download" />

    <Button
        android:id="@+id/bt_hfp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK BLUETOOTH HFP" />

</LinearLayout>